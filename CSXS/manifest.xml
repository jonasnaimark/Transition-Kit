<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0" ExtensionBundleId="com.transitionkit.panel.dev" ExtensionBundleVersion="1.0.0"
                   ExtensionBundleName="Transition Kit Dev" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ExtensionList>
        <Extension Id="com.transitionkit.panel.dev" Version="1.0.0" />
    </ExtensionList>
    
    <ExecutionEnvironment>
        <HostList>
            <!-- This makes it work with After Effects versions 2020-2025 -->
            <Host Name="AEFT" Version="17.0" /> <!-- AE 2020 -->
            <Host Name="AEFT" Version="18.0" /> <!-- AE 2021 -->
            <Host Name="AEFT" Version="22.0" /> <!-- AE 2022 -->
            <Host Name="AEFT" Version="23.0" /> <!-- AE 2023 -->
            <Host Name="AEFT" Version="24.0" /> <!-- AE 2024 -->
            <Host Name="AEFT" Version="25.0" /> <!-- AE 2025 -->
        </HostList>
        
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="7.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    
    <DispatchInfoList>
        <Extension Id="com.transitionkit.panel.dev">
            <DispatchInfo>
                <Resources>
                    <MainPath>./client/index.html</MainPath>
                    <ScriptPath>./jsx/main.jsx</ScriptPath>
                </Resources>
                
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                
                <UI>
                    <Type>Panel</Type>
                    <Menu>Transition Kit Dev</Menu>
                    <Geometry>
                        <Size>
                            <Height>400</Height>
                            <Width>250</Width>
                        </Size>
                        <MinSize>
                            <Height>200</Height>
                            <Width>200</Width>
                        </MinSize>
                    </Geometry>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>